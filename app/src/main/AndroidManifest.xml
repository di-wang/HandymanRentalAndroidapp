<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gatech.edu.project6400">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Customer.RegisterActivity" />
        <activity android:name=".View.Customer.ReservationSummary" />
        <activity android:name=".View.Customer.ReservationFinal" />
        <activity
            android:name=".View.Customer.ViewProfile"
            android:label="@string/title_activity_view_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Customer.MakeReservation"
            android:label="@string/title_activity_make_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Customer.CheckAvailability"
            android:label="@string/title_activity_check_availability"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Clerk.DropOffReservation"
            android:label="@string/title_activity_drop_off_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Clerk.PickUpReservation"
            android:label="@string/title_activity_pick_up_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Clerk.ServiceOrder"
            android:label="@string/title_activity_service_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Clerk.AddTool"
            android:label="@string/title_activity_add_tool"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Clerk.SellTool"
            android:label="@string/title_activity_sell_tool"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Clerk.GenerateReports"
            android:label="@string/title_activity_generate_reports"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Customer.AvailabilityResults"
            android:label="@string/title_activity_availability_results"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.Clerk.RentalReciptPickup" />
        <activity android:name=".View.Clerk.RentalReciptDropoff" />
        <activity
            android:name=".View.Clerk.RegisterClerk"
            android:label="@string/title_activity_register_clerk"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.ViewToolDetails"></activity>
    </application>

</manifest>